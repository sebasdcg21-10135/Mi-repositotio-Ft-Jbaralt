#include <iostream>
using namespace std;

int main()
{
    // Declarar las variables
    double num1 = 53, num2 = -27, num3 = 0.005;

    // Sumar los números
    double resultado = num1 + num2 + num3;

    // Mostrar el resultado
    cout << "La suma de los tres números es: " << resultado << endl;

    return 0;
}

g++ suma.cpp -o suma

./suma

